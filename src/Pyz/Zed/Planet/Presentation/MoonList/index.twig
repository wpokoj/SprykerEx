{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Overview of Moons' | trans %}

{% block head_title widget_title %}

{% block action %}
    {{ viewActionButton('/planet/planet-list', 'View Planets', []) }}
    {{ createActionButton('/planet/moon-create', 'Create new moon', []) }}
{% endblock %}

{% block section_title widget_title %}

{% block content %}
    {% embed '@Gui/Partials/widget.twig' with {
        widget_title: 'List of planets'
    } %}
        {% block widget_content %}
            {{ planetTable | raw }}
        {% endblock %}
    {% endembed %}
{% endblock %}
